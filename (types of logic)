
//three types of logic

//logic 1 -single if 

//syntax 
if(question){
  //code runs if question is true
}

//if it is raining outside wear a jacket 
if (ifraining) = true){      // ==, < ,or  > , <= ,or =>  - compare two things 
  _____.putJacketOn();
}

//logic 2 IF/ELSE
//syntax
if(question){
  //code that runs if true
}else{
  //code that runs if false
}
//example
if(israining) = true){
   _____.wearJacket(True);
}else{
   _____.wearJacket(False);
}

//logic 3 IF/ELSEIF/ELSE

//syntax
if(question1){
  //code to run if question 1 is true
}else if(question2){
  //code to run if question 2 is true
  }else if(question3){
  //code to run if question 3 is true
  }else if(question4){
  //code to run if question 4 is true
}else {
  //code to run by default (catch)
}

//logic 4 - nested if's
//syntax

if(question1){
  //code runs if Q1 is TRUE
  if (question2){
    //code runs if Q1 and Q2 are TRUE
    if(question3){
      //code runs if Q1,Q2 and Q3 are TRUE
    }
  }
}


if(question1){
  //code runs if Q1 is TRUE
  if (question2){
    //code runs if Q1 and Q2 are TRUE
    if(question3){
      //code runs if Q1,Q2 and Q3 are TRUE
    }
  }else if (question4{
    //code runs if Q1 is TRUE, Q2 is FALSE, and Q4 is TRUE
  }else {
      //code runs if Q1 is TRUE, Q2 is FALSE, and Q4 is TRUE
  }
}
